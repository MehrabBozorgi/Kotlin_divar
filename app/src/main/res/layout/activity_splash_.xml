<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gery200"
    tools:context=".Splash_Activity">

    <ImageView
        android:id="@+id/img_splashActivity_logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="180dp"
        android:src="@drawable/divar_logo" />

    <TextView
        android:id="@+id/txt_splashActivity_textSold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_splashActivity_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/lalezar_regular"
        android:text="خرید و فروش آسان"
        android:textColor="@color/red900"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/txt_splashActivity_site"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_splashActivity_textSold"
        android:layout_centerHorizontal="true"
        android:layout_margin="12dp"
        android:fontFamily="@font/lalezar_regular"
        android:text="www.divar.ir"
        android:textColor="@color/red900"
        android:textSize="23dp" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/txt_splashActivity_site"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="140dp"


        />


</RelativeLayout>