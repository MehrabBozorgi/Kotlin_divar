<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    android:background="@drawable/corner_red_style"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/frame_main_frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/nav_main_navigation" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nav_main_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="8dp"
        android:background="?android:attr/windowBackground"
        app:itemBackground="@color/gery200"
        app:itemIconSize="25dp"
        app:itemIconTint="@color/red900"
        app:itemTextColor="@color/red900"
        app:menu="@menu/tab_menu" />

</RelativeLayout>